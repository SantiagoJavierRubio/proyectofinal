{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base",
        "plugin:prettier/recommended",
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "prettier",
        "eslint-plugin-prettier"
    ],
    "rules": {
        "consistent-return": "off",
        "no-plusplus": "off",
        "no-unused-vars": "off",
        "import/extensions": ["error", "ignorePackages"],
        "max-len": [
            "error",
            {
                "code": 85,
                "ignoreUrls": true,
                "ignoreComments": true,
                "ignoreStrings": true,
                "ignoreTemplateLiterals": true
            }
        ],
        "prettier/prettier": ["error", { "singleQuote": true }],
        "no-underscore-dangle": 0
    }
}
